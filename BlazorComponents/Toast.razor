@inject IJSRuntime JSRuntime
@inject IComponentContext Context
@implements IDisposable

@if (IsVisible)
{
    <div ref="@container"
         role="alert"
         aria-live="assertive"
         aria-atomic="true"
         class="toast">
        <div class="toast-header">
            @ToastHeader
            <button type="button"
                    class="ml-2 mb-1 close"
                    aria-label="Close"
                    onclick="@OnClose">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            @ToastBody
        </div>
    </div>
}

@functions {
    [Parameter] bool IsVisible { get; set; } = true;
    [Parameter] RenderFragment ToastHeader { get; set; }
    [Parameter] RenderFragment ToastBody { get; set; }
    [Parameter] EventCallback OnClose { get; set; }
    [Parameter] EventCallback OnClosed { get; set; }

    ElementRef container;
    bool isShown = false;

    protected override async Task OnAfterRenderAsync()
    {
        if (Context.IsConnected && IsVisible && !isShown)
        {
            await JSRuntime.InvokeAsync<object>("__app.toast.show", container);
            isShown = true;
        }
    }

    public override async Task SetParametersAsync(ParameterCollection parameters)
    {
        if (Context.IsConnected && parameters.TryGetValue(nameof(IsVisible), out bool visible) && !visible && isShown)
        {
            await JSRuntime.InvokeAsync<object>("__app.toast.close", container, new DotNetObjectRef(this));
            isShown = false;
        }
        await base.SetParametersAsync(parameters);
    }

    [JSInvokable]
    public Task OnToastClosed()
    {
        return OnClosed.InvokeAsync(null);
    }

    public void Dispose()
    {
        if (Context.IsConnected)
        {
            _ = JSRuntime.InvokeAsync<object>("__app.toast.dispose", container);
        }
    }
}
