<div class="modal-header">
    <h5 class="modal-title">
        @ChildContent
    </h5>
    @if (ShowClose)
    {
        <button type="button"
                class="close"
                aria-label="Close"
                onclick="@OnClose">
            <span aria-hidden="true">&times;</span>
        </button>
    }
</div>

@functions {
    [Parameter] RenderFragment ChildContent { get; set; }
    [Parameter] EventCallback OnClose { get; set; }
    [Parameter] bool ShowClose { get; set; } = true;
}