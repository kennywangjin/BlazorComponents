<div class=@($"input-group search-box {CssClass}")>
    <div class="input-group-prepend">
        <span class="input-group-text" id="search">
            <i class="fas fa-search"></i>
        </span>
    </div>
    <input type="search" 
           class="form-control" 
           placeholder="Search..." 
           aria-label="search" 
           aria-describedby="search" 
           value="@Text" 
           onchange="@(e=>OnSearch.InvokeAsync((string)e.Value))" />
</div>

@functions {
    [Parameter] string Text { get; set; }
    [Parameter] EventCallback<string> OnSearch { get; set; }
    [Parameter] string CssClass { get; set; } = string.Empty;
}